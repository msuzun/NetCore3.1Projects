@model List<Products>
@{
    ViewBag.Title = "Product List";
}

<h1>Product List</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@($"{item.Price:C}")</td>
                <td><a asp-controller="Product" asp-action="Detail" asp-route-slugLink="@item.Slug">View</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>